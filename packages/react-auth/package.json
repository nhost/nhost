{
  "name": "@nhost/react-auth",
  "version": "2.0.3",
  "description": "Nhost React client",
  "license": "MIT",
  "keywords": [
    "nhost",
    "hasura",
    "storage",
    "auth",
    "authentication",
    "graphql",
    "postgresql",
    "realtime",
    "react"
  ],
  "author": "Nhost",
  "homepage": "https://nhost.io",
  "bugs": "https://github.com/nhost/nhost-js/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhost/nhost-js.git"
  },
  "scripts": {
    "type": "tsc --noEmit && tsc --project tests/tsconfig.json",
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc --module commonjs --outDir lib",
    "build:esm": "tsc --module es2020 --outDir esm && pnpm esm:extensions",
    "esm:extensions": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" ../../.config/esm-transformer.ts",
    "test": "pnpm jest --runInBand"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "exports": {
    "import": "./esm/index.js",
    "require": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@nhost/nhost-js": "workspace:*"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
