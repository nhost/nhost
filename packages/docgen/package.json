{
  "name": "@nhost/docgen",
  "description": "Documentation generator for classes and functions",
  "private": true,
  "version": "0.1.3",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "start": "node dist/index.js",
    "build": "pnpm clean && tsup",
    "test": "vitest run --config ../../config/vite.lib.config.js",
    "test:watch": "vitest --config ../../config/vite.lib.config.js",
    "test:coverage": "vitest run --coverage --config ../../config/vite.lib.config.js",
    "clean": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "author": "Nhost",
  "homepage": "https://nhost.io",
  "bugs": "https://github.com/nhost/nhost/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/nhost/nhost.git"
  },
  "bin": {
    "docgen": "dist/index.js"
  },
  "devDependencies": {
    "@swc/core": "^1.3.11",
    "@types/node": "^18.0.0",
    "@types/prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "chalk": "4",
    "commander": "^9.4.0",
    "just-kebab-case": "^4.1.1",
    "prettier": "^2.7.1",
    "valtio": "^1.6.4"
  }
}