  "bin": "dist/index.js",
  "devDependencies": {
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.22",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.2",
    "@types/object-path": "^0.11.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@pnpm/find-workspace-dir": "^1000.1.0",
    "glob": "^11.0.2",
    "object-path": "^0.11.8",
