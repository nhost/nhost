{
  "name": "nhost-js-root",
  "private": true,
  "version": "0.0.0",
  "description": "Nhost Javascript SDK",
  "author": "Nhost",
  "license": "MIT",
  "homepage": "https://nhost.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhost/nhost-js.git"
  },
  "bugs": {
    "url": "https://github.com/nhost/nhost-js/issues"
  },
  
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm create-config && pnpm run -r generate --filter @nhost/*",
    "create-config": "beemo create-config",
    "build": "pnpm turbo run build --scope='@nhost/*' && pnpm run -r generate --filter @nhost-examples/*",
    "generate": "pnpm run -r generate --filter @nhost/*",
    "clean:all": "pnpm clean && rm -rf ./packages/*/node_modules node_modules && pnpm",
    "clean": "rm -rf ./packages/*/{tsconfig.tsbuildinfo,lib,esm} && git checkout -- 'packages/*/esm/*'",
    "ci": "pnpm turbo run build test --concurrency=4 --scope='@nhost/*' && pnpm run -r generate && pnpm run type && pnpm run lint",
    "ci:version": "changeset version && pnpm install --frozen-lockfile false",
    "coverage": "pnpm run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint '{packages,examples}/*/{src,test}/**.{ts,js}'",
    "test": "pnpm turbo run test --scope='@nhost/*'",
    "backend:start": "pnpm run --filter @nhost/backend start",
    "backend:end": "pnpm run --filter @nhost/backend stop",
    "type": "pnpm turbo run type --scope='@nhost/*'",
    "prerelease": "pnpm clean && pnpm install && pnpm run ci",
    "release": "pnpm run prerelease && changeset publish && git push --follow-tags && git status && pnpm -r publish",
    "snapshot": "pnpm prerelease && changeset version --snapshot preview && pnpm install && changeset publish --tag preview"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "backend"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@beemo/cli": "^2.0.5",
    "@beemo/core": "^2.1.3",
    "@beemo/dev": "^1.7.5",
    "@beemo/driver-prettier": "^2.0.5",
    "@changesets/cli": "^2.20.0",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "turbo": "^1.1.2",
    "typescript": "4.5.5"
  },
  "directories": {
    "lib": "lib"
  },
  "resolutions": {
    "graphql": "15.7.2"
  },
  "packageManager": "pnpm@6.24.0",
  "engines": {
    "node": ">=14"
  }
}