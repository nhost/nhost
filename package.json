    "jest-extended": "0.11.5",
    "lint-staged": "10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rfc2047": "^3.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
