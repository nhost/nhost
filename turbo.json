{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "@nhost/dashboard#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "NEXT_TELEMETRY_DISABLED",
        "NEXT_PUBLIC_NHOST_PLATFORM",
        "NEXT_PUBLIC_NHOST_MIGRATIONS_URL",
        "NEXT_PUBLIC_NHOST_HASURA_URL",
        "NEXT_PUBLIC_ENV"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {}
  }
}
