{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2017", "dom"],
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
